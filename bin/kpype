#!/usr/bin/env python

import sys

from kpype import KPype


def main():
	"""
	Implements the script interface.
	"""

	if len(sys.argv) != 2:
		sys.exit(KPype.help())

	cmd = sys.argv[1].tolower

	if cmd == 'info':
		sys.exit(KPype.info())
	elif cmd == 'fast':
		sys.exit(KPype.info(False))
	elif cmd == 'make':
		sys.exit(KPype.make())
	elif cmd == 'build':
		sys.exit(KPype.make(True))
	else:
		sys.exit(KPype.help())


if __name__ == "__main__":
	main()
